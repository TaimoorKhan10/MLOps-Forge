# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md text diff=markdown
*.txt text
*.yml text
*.yaml text
*.json text

# Python
*.py text diff=python
*.pyx text diff=python
*.pyd binary
*.so binary
*.npy binary
*.pkl binary

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
